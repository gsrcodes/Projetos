#include <stdio.h>
#include <locale.h>
#include <stdlib.h>
int main ()
{
	setlocale (LC_ALL, "Portuguese");
	int v=1;
	float sl=0,sj=0,sm=0,sd=0,sb=0,sn=0,cont=0;
	system ("cls");
	printf ("13 - Luiz Ínacio Lula da Silva\n");
	printf ("17 - Jair Messias Bolsonaro\n");
	printf ("18 - Marina Silva\n");
	printf ("51 - Cabo Daciolo\n");
	printf ("1 - Voto em branco\n");
	printf ("2 - Voto nulo\n");
	printf ("0 - Finalizar\n");
	scanf ("%d",&v);
	while (v!=0)
	{
		if (v==13)
			sl++;
		if (v==17)
			sj++;
		if (v==18)
			sm++;
		if (v==51)
			sd++;
		if (v==1)
			sb++;
		if (v==2)
			sn++;
		cont++;
		system ("cls");
		printf ("Voto contabilizado!\n\n");
		printf ("13 - Luiz Ínacio Lula da Silva\n");
		printf ("17 - Jair Messias Bolsonaro\n");
		printf ("18 - Marina Silva\n");
		printf ("51 - Cabo Daciolo\n");
		printf ("1 - Voto em branco\n");
		printf ("2 - Voto nulo\n");
		printf ("0 - Finalizar\n");
		scanf ("%d",&v);
	}
	system ("cls");
	printf ("Luiz Ínacio Lula da Silva: %.0f\n",sl);
	printf ("Porcentagem de votos: %.2f\n",sl/cont*100);
	printf ("\n");
	printf ("Jair Messias Bolsonaro: %.0f\n",sj);
	printf ("Porcentagem de votos: %.2f\n",sj/cont*100);
	printf ("\n");
	printf ("Marina Silva: %.0f\n",sm);
	printf ("Porcentagem de votos: %.2f\n",sm/cont*100);
	printf ("\n");
	printf ("Cabo Daciolo: %.0f\n",sd);
	printf ("Porcentagem de votos: %.2f\n",sd/cont*100);
	printf ("\n");
	printf ("Votos em branco: %.0f\n",sb);
	printf ("Porcentagem de votos: %.2f\n",sb/cont*100);
	printf ("\n");
	printf ("Votos nulos: %.0f\n",sn);
	printf ("Porcentagem de votos: %.2f\n",sn/cont*100);
	
	return 0;
}
